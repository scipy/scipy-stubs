{
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [100],
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [100],
    "editor.tabSize": 2,
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [200],
  },
  "[python]": {
    "editor.rulers": [130],
    "editor.tabSize": 4,
  },
  "[toml]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [100],
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [100],
    "editor.tabSize": 2,
  },
  "[yml]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.rulers": [100],
    "editor.tabSize": 2,
  },
  "dprint.path": ".venv/bin/dprint",
  "mypy-type-checker.path": [
    "uv",
    "run",
    "--frozen",
    "--isolated",
    "--no-editable",
    "--refresh-package=scipy-stubs",
    "mypy",
  ],
  "python.languageServer": "None",
  "python.analysis.typeCheckingMode": "off",
}
